<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_binary_background"
    tools:context=".fragments.BinaryConverter">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="150dp"
    android:layout_gravity="center_vertical|center_horizontal"
    >

 <EditText
     android:id="@+id/binaryNumberEditText"
     android:layout_width="400dp"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginStart="20dp"
     android:layout_marginTop="20dp"
     android:layout_marginEnd="20dp"
     android:layout_marginBottom="20dp"
     android:digits="01"
     android:background="@drawable/rounded_edittext"
     android:gravity="center"
     android:hint="Binary Number"
     android:inputType="number"
     android:padding="10dp"
     android:textColor="#0086c3"
     android:textColorHint="#c0b3c2" />

 <TextView
     android:id="@+id/txtDecimal"
     android:layout_below="@id/binaryNumberEditText"
     android:layout_centerHorizontal="true"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text=""></TextView>

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/textButton"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/txtDecimal"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:textColor="#f5f5f5"
     android:background="@drawable/button_corner"
     android:text="Convert" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/textButtonReset"
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/textButton"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="20dp"
     android:textColor="#f5f5f5"
     android:background="@drawable/button_corner"
     android:text="Reset" />




</RelativeLayout>


</FrameLayout>